@model FreelanceService.Web.Models.JobEditViewModel
@using FreelanceService.Common.Enum
@{
    ViewData["Title"] = "MyJobs";
}

<h1>Редактировать заказ</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" action="MyJobs/EditJob">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden"asp-for="Id" class="form-control" value="@Model.Id">
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input type="text" asp-for="Name" class="form-control" value="@Model.Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input type="text" asp-for="Description" class="form-control" value="@Model.Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <input type="text" asp-for="CategoryId" class="form-control" value="@Model.CategoryId">
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="City">Выберете город проживания</label>
                @Html.DropDownList("City", Html.GetEnumSelectList(typeof(CityEnum)))
                <span asp-validation-for="City" />
            </div>
            <div class="form-group">
                <label asp-for="FinishedDateTime" class="control-label"></label>
                <input type="datetime" asp-for="FinishedDateTime" class="form-control" value="@Model.FinishedDateTime">
                <span asp-validation-for="FinishedDateTime" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Price"></label>
                <input type="number" asp-for="Price" class="form-control" value="@Model.Price">
                <span asp-validation-for="Price" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" asp-controller="MyJobs" asp-action="EditJob" class="btn  btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

          