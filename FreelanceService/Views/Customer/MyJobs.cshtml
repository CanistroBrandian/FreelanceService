@model IEnumerable<FreelanceService.Web.Models.JobViewModel>

@{
    ViewData["Title"] = "MyJobs";
}

<h1>MyJobs</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label" >Категория</label>
            </th>
            <th>
                <label class="control-label">Имя</label>
            </th>
            <th>
                <label class="control-label">Описание</label>
            </th>
            <th>
                <label class="control-label">Местоположение</label>
            </th>
            <th>
                <label class="control-label">Дата окончания</label>
            </th>
            <th>
                <label class="control-label">Цена</label>
            </th>
            <th>
                <label class="control-label">Статус</label>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <p class="fa-paragraph">@item.CategoryId</p>
            </td>
            <td>
                <p class="fa-paragraph">@item.Name</p>
            </td>
            <td>
                <p class="fa-paragraph">@item.Description</p>
            </td>
            <td>
                <label asp-for="@item.City">@item.City</label>
            </td>
            <td>
                <label>@item.FinishedDateTime.Date.ToString("dd-mm-yyyy")</label>
            </td>
            <td>
                <p class="fa-paragraph">@item.Price</p>
            </td>
            <td>
                <label asp-for="@item.Status" >@item.Status</label>
            </td>
            <td>
                <a asp-controller="Customer" asp-action="MyJobDetails" asp-route-jobId="@item.Id">Посмотреть</a>
                <a asp-controller="Customer" asp-action="EditJob" asp-route-jobId="@item.Id">Редактировать</a>
                <a asp-controller="Customer" asp-action="DeleteJob" asp-route-jobId="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
